{
    //
    // vscode settings
    //
    "editor.acceptSuggestionOnEnter": "off",
    "editor.cursorStyle": "block",
    "editor.detectIndentation": false,
    "editor.folding": false,
    "editor.fontFamily": "'Fira Code', monospace",
    "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss05', 'ss06'",
    "editor.fontSize": 14,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.lineNumbers": "off",
    "editor.minimap.enabled": false,
    "editor.mouseWheelZoom": true,
    "editor.renderIndentGuides": false,
    "explorer.confirmDragAndDrop": false,
    "files.exclude": {
        "**/*.{vo,vio,vos,cache,v.d,glob,aux,bak}": true
    },
    "files.trimTrailingWhitespace": true,
    "files.watcherExclude": {
        "**/target/**": true
    },
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontFamily": "'Hack Nerd Font', 'Hack NF', 'Hack', monospace",
    "window.zoomLevel": 0,
    "workbench.colorTheme": "Higher Contrast Zenburn",
    "workbench.iconTheme": "vscode-icons",
    //
    // language-specific settings
    //
    "[c]": {
        "editor.tabSize": 8,
        "editor.formatOnSave": false,
    },
    "[coq]": {
        "editor.tabSize": 2,
    },
    "[cpp]": {
        "editor.tabSize": 2,
    },
    "[rust]": {
        "editor.defaultFormatter": "rust-lang.rust"
    },
    "[ocaml]": {
        "editor.tabSize": 2,
    },
    //
    // extension settings
    //
    "bracket-pair-colorizer-2.colors": [
        "#dbc27e",
        "#f5dfde",
        "#b7cfc4",
    ],
    "C_Cpp.clang_format_fallbackStyle": "Google",
    "C_Cpp.clang_format_style": "Google",
    "C_Cpp.enhancedColorization": "Disabled",
    "reason.codelens.enabled": true,
    "todo-tree.general.tags": [
        "BUG",
        "FIXME",
        "TODO",
        "CHECK"
    ],
    "todo-tree.highlights.enabled": true,
    "todo-tree.regex.regex": "((//|#|<!--|;|/\\*|^|\\(\\*)\\s*($TAGS)|^\\s*- \\[ \\])|(admit\\.)",
}